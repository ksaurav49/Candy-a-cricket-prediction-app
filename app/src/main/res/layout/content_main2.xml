<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:id="@+id/rl"
    android:layout_below="@+id/toolbar"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/main">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="INDIA"
                android:layout_marginLeft="8dp"
                android:id="@+id/team1"
                android:textSize="25sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="VS"
                android:id="@+id/vs"
                android:textSize="25sp"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="INDIA"
                android:layout_alignParentEnd="true"
                android:layout_gravity="right"
                android:id="@+id/team2"
                android:layout_marginRight="8dp"
                android:textSize="25sp"/>
        </RelativeLayout>

    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/main"
        android:layout_marginTop="16dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.design.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                app:cardElevation="20dp"
                android:id="@+id/cardShop">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:id="@+id/l1">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Run:"
                            android:textColor="@color/colorPrimaryDark"
                            android:layout_marginLeft="8dp"
                            android:textSize="20dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Wicket:"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="20dp"
                            android:layout_centerHorizontal="true"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Over:"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="20dp"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="8dp"/>

                    </RelativeLayout>


                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:id="@+id/l2"
                    android:layout_below="@id/l1">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="run"
                            android:textSize="20dp"
                            android:id="@+id/r"
                            android:layout_marginLeft="8dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Wicket"
                            android:id="@+id/w"
                            android:textSize="20dp"
                            android:layout_centerHorizontal="true"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Over"
                            android:id="@+id/o"
                            android:textSize="20dp"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="8dp"/>

                    </RelativeLayout>
                </LinearLayout>


                </RelativeLayout>

                
                    
                



            </android.support.design.card.MaterialCardView>


            <android.support.design.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp"
                app:cardElevation="20dp"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:id="@+id/l11">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Batsman"
                                android:textColor="@color/colorPrimaryDark"
                                android:layout_marginLeft="8dp"
                                android:textSize="20dp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Runs"
                                android:textColor="@color/colorPrimaryDark"
                                android:textSize="20dp"
                                android:layout_centerHorizontal="true"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Balls"
                                android:textColor="@color/colorPrimaryDark"
                                android:textSize="20dp"
                                android:layout_alignParentRight="true"
                                android:layout_marginRight="8dp"/>

                        </RelativeLayout>


                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:id="@+id/l12"
                        android:layout_below="@id/l11">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Batsman"
                                android:textSize="20dp"
                                android:id="@+id/bt1"
                                android:layout_marginLeft="8dp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Runs"
                                android:id="@+id/r1"
                                android:textSize="20dp"
                                android:layout_centerHorizontal="true"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Balls"
                                android:id="@+id/b1"
                                android:textSize="20dp"
                                android:layout_alignParentRight="true"
                                android:layout_marginRight="8dp"/>

                        </RelativeLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_below="@id/l12">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Batsman"
                                android:textSize="20dp"
                                android:id="@+id/bt2"
                                android:layout_marginLeft="8dp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Runs"
                                android:id="@+id/r2"
                                android:textSize="20dp"
                                android:layout_centerHorizontal="true"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Balls"
                                android:id="@+id/b2"
                                android:textSize="20dp"
                                android:layout_alignParentRight="true"
                                android:layout_marginRight="8dp"/>

                        </RelativeLayout>
                    </LinearLayout>


                </RelativeLayout>







            </android.support.design.card.MaterialCardView>

            <android.support.design.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp"
                app:cardElevation="20dp"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:id="@+id/lagail"
                        >
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Market Rate :"
                                android:textSize="25dp"
                                android:textColor="@color/colorPrimaryDark"
                                android:layout_marginLeft="8dp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Favourite :"
                                android:textColor="@color/colorPrimaryDark"
                                android:textSize="25dp"
                                android:layout_marginRight="8dp"
                                android:layout_alignParentRight="true"/>
                        </RelativeLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_below="@+id/lagail">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"

                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"
                        android:background="@drawable/sh"
                        >
                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="82"
                            android:id="@+id/lgai"
                            android:layout_marginLeft="4dp"
                            android:layout_marginRight="4dp"
                            android:textAlignment="center"
                            android:textColor="@color/colorPrimary"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:textSize="20dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Lagai"
                            android:layout_gravity="center"
                            android:layout_marginLeft="4dp"
                            android:layout_marginRight="4dp"
                            android:layout_marginBottom="4dp"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="20dp"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_below="@+id/lagail"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"
                        android:background="@drawable/sh"
                        >
                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="82"
                            android:id="@+id/khai"
                            android:textColor="@color/colorPrimary"
                            android:layout_marginLeft="4dp"
                            android:layout_marginRight="4dp"
                            android:textAlignment="center"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:textSize="20dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Khai"
                            android:layout_gravity="center"
                            android:layout_marginLeft="4dp"
                            android:layout_marginRight="4dp"
                            android:layout_marginBottom="4dp"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="20dp"/>

                    </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            >
                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="INDIA"
                                    android:layout_marginTop="8dp"
                                    android:textSize="20dp"
                                    android:id="@+id/fav"
                                    android:textColor="@color/colorPrimary"
                                   android:layout_alignParentRight="true"
                                    android:layout_marginRight="16dp"
                                    android:textAlignment="center"/>
                            </RelativeLayout>

                        </LinearLayout>
                    </LinearLayout>





                </RelativeLayout>
            </android.support.design.card.MaterialCardView>

            <android.support.design.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp"
                app:cardElevation="20dp"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:id="@+id/lagaill"
                        >
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Session :"
                                android:textSize="25dp"
                                android:textColor="@color/colorPrimaryDark"
                                android:layout_marginLeft="8dp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Over :"
                                android:textColor="@color/colorPrimaryDark"
                                android:textSize="25dp"
                                android:layout_marginRight="8dp"
                                android:layout_alignParentRight="true"/>
                        </RelativeLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_below="@+id/lagaill">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"

                            android:layout_marginLeft="8dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="8dp"
                            android:background="@drawable/sh"
                            >
                            <Button
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="82"
                                android:layout_marginLeft="4dp"
                                android:layout_marginRight="4dp"
                                android:textAlignment="center"
                                android:id="@+id/no"
                                android:textColor="@color/colorPrimary"
                                android:gravity="center"
                                android:layout_gravity="center"
                                android:textSize="20dp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="NOT"
                                android:layout_gravity="center"
                                android:layout_marginLeft="4dp"
                                android:layout_marginRight="4dp"
                                android:layout_marginBottom="4dp"
                                android:textColor="@color/colorPrimaryDark"
                                android:textSize="20dp"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_below="@+id/lagail"
                            android:layout_marginLeft="8dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="8dp"
                            android:background="@drawable/sh"
                            >
                            <Button
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="82"
                                android:textColor="@color/colorPrimary"
                                android:layout_marginLeft="4dp"
                                android:layout_marginRight="4dp"
                                android:textAlignment="center"
                                android:id="@+id/yes"
                                android:gravity="center"
                                android:layout_gravity="center"
                                android:textSize="20dp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="YES"
                                android:layout_gravity="center"
                                android:layout_marginLeft="4dp"
                                android:layout_marginRight="4dp"
                                android:layout_marginBottom="4dp"
                                android:textColor="@color/colorPrimaryDark"
                                android:textSize="20dp"/>

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            >
                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="INDIA"
                                    android:layout_marginTop="8dp"
                                    android:textSize="20dp"
                                    android:textColor="@color/colorPrimary"
                                    android:layout_alignParentRight="true"
                                    android:layout_marginRight="16dp"
                                    android:id="@+id/ov"
                                    android:textAlignment="center"/>
                            </RelativeLayout>

                        </LinearLayout>
                    </LinearLayout>





                </RelativeLayout>
            </android.support.design.card.MaterialCardView>




        </LinearLayout>
    </ScrollView>


</RelativeLayout>
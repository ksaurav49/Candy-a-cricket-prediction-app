<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dest_background"
    android:id="@+id/rl"
    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="35sp"
                android:layout_marginTop="35sp"
                android:textStyle="bold"
                android:fontFamily="serif"
                android:textColor="@color/white"
                android:text="SIGN IN"
                android:id="@+id/lt"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:src="@drawable/c"
                android:id="@+id/li"/>
            <!--<com.google.android.gms.ads.AdView-->
            <!--android:layout_marginTop="15dp"-->
            <!--android:background="@drawable/squarcircle"-->
            <!--xmlns:ads="http://schemas.android.com/apk/res-auto"-->
            <!--android:id="@+id/adView"-->
            <!--android:layout_width="280dp"-->
            <!--android:layout_height="180dp"-->
            <!--ads:adSize="SMART_BANNER"-->
            <!--ads:adUnitId="ca-app-pub-7131898910875866/2552874903">-->
            <!--<TextView-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:textAlignment="center"-->
            <!--android:text="Google adds"/>-->
            <!--</com.google.android.gms.ads.AdView>-->
            <EditText
                android:layout_marginTop="35dp"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:id="@+id/name"
                android:inputType="textEmailAddress"
                android:drawableLeft="@drawable/ic_mail_black"
                android:drawablePadding="5dp"
                android:hint="Username"
                android:background="@drawable/squarcircle"
                android:padding="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <EditText
                android:layout_marginTop="5dp"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:hint="Password"
                android:drawableLeft="@drawable/ic_lock_outline"
                android:drawablePadding="5dp"
                android:background="@drawable/squarcircle"
                android:padding="12dp"
                android:inputType="textPassword"
                android:id="@+id/pass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <Button
                android:id="@+id/btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:textColor="#fff"
                android:background="@drawable/login_button"
                android:text="Sign in"/>


        </LinearLayout>
        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </LinearLayout>
            <LinearLayout
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_marginBottom="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Not yet registered ? Sign up"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:id="@+id/t"
                    android:textAlignment="center" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>


</RelativeLayout>